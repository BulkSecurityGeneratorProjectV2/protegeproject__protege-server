<?xml version = "1.0" encoding = "UTF-8"?>

<launch>
  <pluginDirectory dir="plugins"/>
  <systemProperties>
    <property name="file.encoding" value="utf-8"/>
    <property name="apple.laf.useScreenMenuBar" value="true"/>
    <property name="com.apple.mrj.application.growbox.intrudes" value="true"/>
  </systemProperties>
  <frameworkProperties>
    <property name="org.osgi.framework.bootdelegation" value="sun.*,com.sun.*,apple.*,com.apple.*"/>
    <property name="org.osgi.framework.system.packages.extra" 
              value="javax.xml.parsers,org.xml.sax,org.xml.sax.ext,org.xml.sax.helpers"/>
    <property name="org.osgi.framework.storage.clean" 
              value="onFirstInit"/>
  </frameworkProperties>
  <bundles>
      <search path="bundles"/>
      <bundle name="org.protege.common.jar"/>
  </bundles>
  <bundles>
      <search path="bundles"/>
      <bundle name="org.apache.felix.configadmin-1.2.4.jar"/>
      <bundle name="org.apache.felix.http.api-2.0.4.jar"/>
      <bundle name="org.apache.felix.http.bundle-2.0.4.jar"/>
      <bundle name="org.apache.felix.http.jetty-2.0.4.jar"/>
      <bundle name="org.apache.felix.log-1.0.0.jar"/>
      <bundle name="org.apache.felix.scr-1.4.0.jar"/>
      <bundle name="protege-owlapi-extensions.jar"/>
      <bundle name="org.protege.owl.server.db.jar"/>
      <bundle name="org.protege.owl.server.servlet.jar"/>
  </bundles>

  <bundles>
      <search path="plugins"/>
      <bundle name="org.protege.osgi.jdbc.jar"/>
      <bundle name="org.semanticweb.owl.owlapi.jar"/>
      <bundle name="org.protege.editor.owl.codegeneration.jar"/>
      <bundle name="org.protege.owl.database.jar"/>
      <bundle name="org.protege.owl.server.jar"/>
  </bundles>

</launch>


