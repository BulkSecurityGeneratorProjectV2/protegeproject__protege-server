<?xml version="1.0"?>
<scr:component name="configurator" 
               immediate="true"
			   xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
	<implementation class="org.protege.owl.server.configuration.ConfigurationManagerImpl"/>
	<service>
		<provide interface="org.protege.owl.server.api.ConfigurationManager"/>
	</service>	
	<reference name="FACTORY"
		interface="org.protege.owl.server.api.ServerFactory"
		bind="addServerFactory"
		unbind="removeServerFactory"
		cardinality="0..n"
		policy="dynamic"/>
</scr:component>
