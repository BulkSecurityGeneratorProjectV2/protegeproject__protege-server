<?xml version="1.0" encoding="UTF-8"?>
<scr:component name="BuilderService" immediate="true" xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
    <implementation class="org.protege.owl.server.configuration.ServerBuilderService" />
    <service>
        <provide interface="org.protege.owl.server.api.server.BuilderService" />
    </service>
    <reference name="CONFIGURATION"
        interface="org.protege.owl.server.api.server.ServerConfiguration"
        bind="initialize"
        cardinality="1..1" />
    <reference name="SERVER_FACTORY"
        interface="org.protege.owl.server.api.server.ServerFactory"
        bind="setServerFactory"
        cardinality="1..1"
        policy="static" />
    <reference name="TRANSPORT_FACTORY"
        interface="org.protege.owl.server.api.server.TransportFactory"
        bind="setTransportFactory"
        cardinality="1..1"
        policy="static" />
</scr:component>